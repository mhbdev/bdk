{
  "name": "@mhbdev/bdk",
  "version": "1.0.7",
  "description": "Universal billing and payment abstraction framework for Node.js/TypeScript",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./sdk": {
      "types": "./dist/sdk/index.d.ts",
      "import": "./dist/sdk/index.js",
      "require": "./dist/sdk/index.cjs"
    },
    "./nextjs": {
      "types": "./dist/nextjs/index.d.ts",
      "import": "./dist/nextjs/index.js",
      "require": "./dist/nextjs/index.cjs"
    },
    "./providers/stripe/StripeAdapter": {
      "types": "./dist/providers/stripe/StripeAdapter.d.ts",
      "import": "./dist/providers/stripe/StripeAdapter.js",
      "require": "./dist/providers/stripe/StripeAdapter.cjs"
    },
    "./storage/drizzle": {
      "types": "./dist/storage/drizzle.d.ts",
      "import": "./dist/storage/drizzle.js",
      "require": "./dist/storage/drizzle.cjs"
    },
    "./storage/inMemory": {
      "types": "./dist/storage/inMemory.d.ts",
      "import": "./dist/storage/inMemory.js",
      "require": "./dist/storage/inMemory.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts --format cjs,esm --sourcemap",
    "dev": "tsup src/index.ts --watch --dts --format cjs,esm --sourcemap",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.7",
    "eventemitter3": "^5.0.1",
    "ioredis": "^5.8.2",
    "pdfkit": "^0.13.0",
    "stripe": "^19.3.0",
    "zod": "^3.23.8"
  }
}
