{
  "name": "@mhbdev/bdk",
  "version": "1.0.8",
  "description": "Unified payment gateway abstraction for multiple payment providers",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./stripe": {
      "import": "./dist/providers/stripe.js",
      "types": "./dist/providers/stripe.d.ts"
    },
    "./paypal": {
      "import": "./dist/providers/paypal.js",
      "types": "./dist/providers/paypal.d.ts"
    },
    "./crypto": {
      "import": "./dist/providers/crypto.js",
      "types": "./dist/providers/crypto.d.ts"
    },
    "./mock": {
      "import": "./dist/providers/mock.js",
      "types": "./dist/providers/mock.d.ts"
    }
  },
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --watch --config tsup.config.ts",
    "test": "vitest run --config vitest.config.js",
    "prepublishOnly": "npm run build",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/eventemitter3": "^2.0.2",
    "@types/node": "^20.11.30",
    "chai": "^4.3.7",
    "husky": "^9.1.7",
    "jsdom": "^24.0.0",
    "mocha": "^10.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vitest": "^1.3.1"
  },
  "keywords": [
    "billing",
    "payment",
    "gateway",
    "stripe",
    "paypal",
    "crypto",
    "checkout",
    "subscription",
    "webhook"
  ],
  "author": "mhbdev",
  "license": "MIT",
  "dependencies": {
    "eventemitter3": "^5.0.1"
  },
  "optionalDependencies": {
    "stripe": "^14.20.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mhbdev/bdk"
  },
  "bugs": {
    "url": "https://github.com/mhbdev/bdk/issues"
  },
  "homepage": "https://github.com/mhbdev/bdk#readme"
}
